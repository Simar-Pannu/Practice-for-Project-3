@{
    ViewData["Title"] = "Home Page";
}

<form action="/home/lobby" method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="username" class="whitefont">Username</label>
      <input type="text" class="form-control" id="username" name="username" placeholder="Username">
    </div>
    <div class="form-group col-md-6">
      <label for="password" class="whitefont">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="firstname" class="whitefont">First name</label>
      <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First name">
    </div>
    <div class="form-group col-md-6">
      <label for="lastname" class="whitefont">Last name</label>
      <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Last name">
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="chip" class="whitefont">Amount of chip</label>
      <input type="number" class="form-control" id="chip" name="chip" placeholder="Chip">
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Create account</button>
</form>

<style>
  body {
    background-image: url('/images/poker-hand-and-chips.jpg');
  }
</style>